<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_open"
        android:background="@color/bg_EE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_type"
            android:textSize="18sp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_draw_point"
                    style="@style/open_icon_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/top_open_image_point" />

                <ImageButton
                    android:id="@+id/ib_draw_line"
                    style="@style/open_icon_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/top_open_image_line" />

                <ImageButton
                    android:id="@+id/ib_draw_info"
                    style="@style/open_icon_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/top_open_image_info" />

                <ImageButton
                    android:id="@+id/ib_draw_delete"
                    style="@style/open_icon_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/top_open_image_delete" />

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_below="@id/ll_open"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:layout_marginRight="12dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/open_info_marker"
            android:text="点"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/marer_info"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/open_info_line"
            android:text="线"
            android:layout_width="0dp"
            style="@style/marer_info"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>

